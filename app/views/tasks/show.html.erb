<h1> TOP 5. Primeros usuarios en terminar las tareas </h1>
<hr>
<div class='row'>
  <% @tus = TasksUsers.all.where(task_id: @task.id) %>
  <% @tus = @tus.order(completed_at: :asc) %>
  <% @tus.each do |tu| %>
    <% if tu.completed_at != nil && @counter <= 5 %>
      <div class="col-md-1">
        <h3><%= @counter %>. </h3>
      </div>
      <div class='col-md-4'>
        <%= User.find_by(id: tu.user_id).name %>
        <%= User.find_by(id: tu.user_id).lastname %>
        <p> Completado el  <%= tu.completed_at %> </p>
        <% @counter += 1 %>
      </div>
      <div class="col-md-1">
        <img height="50" width="50" src= "<%= User.find_by(id: tu.user_id).avatar %>">  
      </div>
      <div class="col-md-6">
      </div>
    <% end %>
  <% end %>
  <hr>
  <div class='col-md-6 mt-5'>
    <div class='card text-white border-primary'>
      <%= image_tag(@task.photo, height: '300', width: '150' , class:'card-img-top') %>
      <div class='body text-center'>
        <%= @task.title %>
        <br>
        <%=@task.description %>
      </div>
    </div>
  </div>
</div>

<hr>

<h3> Listado completo de usuarios que han terminado la tarea </h3>
<% @counter = 1 %>
<% @tus.each do |tu| %>
  <% if tu.completed_at != nil %>
    <div class="row">
      <div class="col-md-1">
        <%= @counter %>.
      </div>
      <div class='col-md-4'>
        <%= User.find_by(id: tu.user_id).name %>
        <%= User.find_by(id: tu.user_id).lastname %>
        <% @counter += 1 %>
      </div>
      <div class="col-md-7"></div>
    </div>
  <% end %>
<% end %>


